{
  "name": "eslint-config-react-typescript",
  "version": "1.0.9",
  "description": "One config to rule them all",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "Yulong Ruan <ruanyu1@gmail.com>",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --declaration",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.30.6",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "eslint": "^8.19.0",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "tsconfigs": "^5.0.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=3.1.0",
    "eslint": ">=7.2.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "parser": "typescript",
    "endOfLine": "lf",
    "jsxBracketSameLine": false,
    "proseWrap": "preserve"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruanyl/eslint-config-react-typescript.git"
  },
  "homepage": "https://github.com/ruanyl/eslint-config-react-typescript"
}
