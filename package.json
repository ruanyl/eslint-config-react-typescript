{
  "name": "eslint-config-react-typescript",
  "version": "1.0.9",
  "description": "One config to rule them all",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "Yulong Ruan <ruanyu1@gmail.com>",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --declaration",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^4.28.4",
    "eslint-plugin-jsdoc": "^35.5.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.28.0",
    "@types/node": "^14.0.12",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "eslint": "^7.31.0",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "tsconfigs": "^5.0.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=3.1.0",
    "eslint": ">=7.2.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "parser": "typescript",
    "endOfLine": "lf",
    "jsxBracketSameLine": false,
    "proseWrap": "preserve"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruanyl/eslint-config-react-typescript.git"
  },
  "homepage": "https://github.com/ruanyl/eslint-config-react-typescript"
}
